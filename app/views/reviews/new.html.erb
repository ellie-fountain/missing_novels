<div class="container">
<div class="row">
<div class="col-md-6 col-md-offset-3 review-form">
<h1>新しいレビューを書く</h1>
	 <%= form_for(@review) do |f| %>
	    <h4>レビューの題名</h4>
	    <%= f.text_field :review_title %>
	    <h4>レビュー元作品</h4>
	    <%= f.text_field :novel_name %>
	    <h4>レビュー本文</h4>
	    <%= f.text_area :review_text %><br>
	    <h4>タグ</h4>
	    <%= f.text_field :tag_list, value: @review.tag_list.join(','), class: "form-control" %>
	    <%= f.submit 'レビューを投稿する' %><br><br>
	  <% end %>
	  <%= link_to '一覧に戻る', root_path, class:"btn btn-primary" %>
</div>
</div>
</div>