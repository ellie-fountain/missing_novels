<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@review) do |f| %>
        <h4>レビュー題名</h4>
        <%= f.text_field :review_title %>
        <h4>レビュー元作品名</h4>
        <%= f.text_field :novel_name %><br>
        <h4>レビュー本文</h4>
        <%= f.text_area :review_text %><br>
        <h4>タグ</h4>
        <%= f.text_field :tag_list, value: @review.tag_list.join(','), class: "form-control" %>
        <%= f.submit 'レビューを更新する' %><br>
        <% end %>
        <%= link_to "戻る", review_path(@review) %>
        <%= link_to "削除する", review_path(@review), method: :delete %>

    </div>
   </div>
</div>